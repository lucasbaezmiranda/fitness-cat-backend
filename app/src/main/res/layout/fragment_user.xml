<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment">

    <!-- Background ImageView (behind all content, full screen) -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Steps info at the top -->
    <TextView
        android:id="@+id/stepsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasos acumulados"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stepsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:background="#E3F2FD"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepsLabel" />

    <!-- Main grid container (centered) -->
    <LinearLayout
        android:id="@+id/gridContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepsText"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundImageView">

        <!-- Stage row: Image centered -->
        <LinearLayout
            android:id="@+id/stageRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/stageImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:contentDescription="Stage image"
                android:scaleType="fitCenter"
                android:src="@drawable/stage_1" />

            <!-- Stage buttons container (horizontal, below image) -->
            <LinearLayout
                android:id="@+id/stageButtonsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/prevStageButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="◀"
                    android:textSize="32sp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/nextStageButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="▶"
                    android:textSize="32sp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Health bar row: Progress bar on left, buttons on right -->
        <LinearLayout
            android:id="@+id/healthRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Health bar and value container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/healthProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="#4CAF50" />

                <!-- Health value text -->
                <TextView
                    android:id="@+id/healthValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




