<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UserFragment">

    <!-- Main grid container (centered) -->
    <LinearLayout
        android:id="@+id/gridContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Stage row: Image on left, buttons on right -->
        <LinearLayout
            android:id="@+id/stageRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/stageImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Stage image"
                android:scaleType="fitCenter"
                android:src="@drawable/stage_1" />

            <!-- Stage buttons container (horizontal) -->
            <LinearLayout
                android:id="@+id/stageButtonsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <Button
                    android:id="@+id/prevStageButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="◀"
                    android:textSize="20sp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/nextStageButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="▶"
                    android:textSize="20sp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Health bar row: Progress bar on left, buttons on right -->
        <LinearLayout
            android:id="@+id/healthRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Health bar and value container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/healthProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="#4CAF50" />

                <!-- Health value text -->
                <TextView
                    android:id="@+id/healthValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Health buttons container (horizontal) -->
            <LinearLayout
                android:id="@+id/healthButtonsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <Button
                    android:id="@+id/increaseHealthButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="▲"
                    android:textSize="20sp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/decreaseHealthButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="▼"
                    android:textSize="20sp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/stepsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasos de hoy"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridContainer" />

    <TextView
        android:id="@+id/stepsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepsLabel" />

    <TextView
        android:id="@+id/activityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad actual"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepsText" />

    <TextView
        android:id="@+id/activityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconocido"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityLabel" />

    <Button
        android:id="@+id/syncButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sincronizar ahora"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepsText" />

</androidx.constraintlayout.widget.ConstraintLayout>




